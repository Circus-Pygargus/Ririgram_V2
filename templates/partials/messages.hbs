<div id="messages">
    {{#if messages}}
        {{#each messages}}
        <div class="message">
            {{#ifEquals user.name this.owner}}
                <div class="message-close" data-id="{{this._id}}">Effacer</div>
            {{/ifEquals}}
            {{#if user.role}}
                <div>{{user.role}}</div>
                {{#ifEquals user.role 'admin'}}
                    <div class="message-answer-btn" data-id="{{this._id}}">RÃ©pondre</div>
                {{/ifEquals}}
            {{/if}}
            <div class="message-date">{{this.createdAt}}</div>
            <div class="answer-owner">{{this.owner}}</div>
            <div class="message-type">{{this.type}}</div>
            <div class="message-device">{{this.device}}</div>
            <div class="message-browser">{{this.browser}}</div>
            <div class="message-text">{{this.message}}</div>
            <div class="message-answer">{{this.answer}}</div>
            <div class="anwser-date">{{this.updatedAt}}</div>
            <div class="answer-owner">{{this.answerOner}}</div>
        </div>
        {{/each}}
    {{/if}}
</div>