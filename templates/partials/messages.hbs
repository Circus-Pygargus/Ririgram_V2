<div id="messages">
    {{!-- {{#if messages}} --}}


        {{#each messages}}
        <div class="message">
            <div class="header">
                <div class="date">{{this.createdAt}}</div>
                <div class="owner">{{this.owner}}</div>
                {{#ifEquals ../user.name this.owner}}
                <div class="close" data-id="{{this._id}}">
                    <svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-trash" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                        <path d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0V6z"/>
                        <path fill-rule="evenodd" d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1v1zM4.118 4L4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4H4.118zM2.5 3V2h11v1h-11z"/>
                    </svg>
                </div>
                {{/ifEquals}}
            </div>
            <div class="content">
                <div class="infos">
                    <div class="type {{this.type}}">{{this.type}}</div>
                    <div class="device">{{this.device}}</div>
                    <div class="browser">{{this.browser}}</div>
                </div>
                <div class="msg-text">{{this.message}}</div>
                {{#if ../user.role}}
                {{#ifEquals ../user.role "admin"}}
                <div class="msg-answer-btn" data-id="{{this._id}}">Répondre</div>
                {{/ifEquals}}
                {{/if}}
            </div>
            {{#if this.answer}}
            <div class="answer">
                <div class="header">
                    <div class="date">{{this.updatedAt}}</div>
                    <div class="owner">{{this.answerOner}}</div>
                </div>
                <div class="msg-answer">{{this.answer}}</div>
            </div>
            {{/if}}
        </div>
        {{/each}}



